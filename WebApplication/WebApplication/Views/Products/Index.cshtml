@model IEnumerable<WebApplication.Models.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Products list</h2>

<p>
    <a href="@Url.Action("Create")">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            Product name
        </th>
        <th>
            Price
        </th>
        <th>
            Description
        </th>
        <th>
            Picture
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("Details", new { item.id })" target="_blank">@item.Name</a>
        </td>
        <td>
            @item.Price
        </td>
        <td>
            @if (item.Description != null && item.Description.Length > 100)
            {
                @item.Description.Substring(0, 100)
            }
            else
            {
                @item.Description
            }
        </td>
        <td>
            <img src="@Url.Action("Picture", new { item.id })" width="37px" height="40px" />
        </td>
        <td>
            <a href="@Url.Action("Edit", new { item.id })">
                <i class="fas fa-edit"></i>
            </a>
            <a href="@Url.Action("Delete", new { item.id })">
                <i class="fas fa-trash"></i>
            </a>
        </td>
    </tr>
}

</table>
